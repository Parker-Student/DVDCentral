@model PF.DVDCentral.BL.Models.ShoppingCart

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Format)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayNameFor(model => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Format)
            </td>
            <td>
            @Html.ActionLink("Remove From Cart", "RemoveFromCart", new { id = item.Id })
            </td>

        </tr>
    }

</table>
<div>@Html.ActionLink("Check out", "Checkout", "ShoppingCart", null, new { @class = "btn btn-primary" })</div>
